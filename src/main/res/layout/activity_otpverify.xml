<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_otpverify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="com.farhansoftware.developershub.activities.OTPverify">

    <TextView
        android:id="@+id/otp_verify_text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <com.farhansoftware.developershub.custom.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter OTP"
        app:font="robolt.ttf"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/otp_verify_text_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/tv1"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:maxLength="6"
        android:background="@drawable/edit_text_bg_hover"
        android:layout_marginTop="17dp"
        android:id="@+id/otp_verify_number_box"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>
