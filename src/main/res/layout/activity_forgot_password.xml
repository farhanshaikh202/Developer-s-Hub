<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/startup_bg">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:alpha="0.7">
    </View>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:text="Forgot Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/textview7"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2"
            android:textColor="#fff" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/frgt_pswrd_email_et"
            android:hint="Enter your registered Email ID"
            android:background="@drawable/edit_text_selector"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_marginTop="30dp" />

        <Button
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/frgt_pswrd_submit_btn"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"
            android:background="@drawable/register_btn_selector" />

    </LinearLayout>

</RelativeLayout>
